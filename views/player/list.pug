extends ../layout 

block content 
    link(rel="stylesheet", href="/css/style.css")
    h1 Jugadores 

    table 
        thead 
            th Nombre 
            th Apellido 
            th Edad 
            th Equipo 
        tbody 
            each player in players 
                tr 
                    td=player.name 
                    td=player.last_name 
                    td=player.age 
                    if player.team
                        td=player.team.name 
                    else  
                        td Sin equipo
                    td 
                        form(action=`/players/player/delete/${player.idplayer}`, method="post") 
                            input(type="hidden", name="password", value="mi-contraseña")
                            input(type="submit", value="¡¡¡NO ME BORRES POR FAVOOOORRRRR!!!")
    a(href="/players/new") 
        button Crear un jugador 

                


        