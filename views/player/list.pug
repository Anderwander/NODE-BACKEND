extends ../layout 

block content 
    
    h1 Jugadores 
    
    table 
        thead 
            th Nombre 
            th Apellido 
            th Edad 
            th Equipo 
        tbody 
            each player in players 
                tr 
                    td
                        a(href=`/players/player/${player.idplayer}`)=player.name 
                    td=player.last_name 
                    td=player.age 
                    if player.team
                          td=player.team.name 
                    else  
                        td Sin equipo
                    td 
                        
                        form(action=`/players/edit/${player.idplayer}`,method="get" )
                            input(type="submit",class="btn-edit", value="Editar")
                        form(action=`/players/delete/${player.idplayer}`, method="post") 
                            input(type="hidden", name="password", value="mi-contrase√±a")
                            input(type="submit", value="borrar")
    
    a(href="/players/new") 
